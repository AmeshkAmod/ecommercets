{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src"]
}
